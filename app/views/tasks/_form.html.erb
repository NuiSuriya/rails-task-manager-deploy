<%= form_with model: @task do |f| %>

  <%= f.label :What_do_I_need_to_do_?, class: "mb-2 mt-3 fw-bold"%>
  <%= f.text_field :title,
    class: "form-control mb-3" %>


  <%= f.label :Description, class: "mb-2 fw-bold" %>
  <%= f.text_field :details, class: "form-control mb-3" %>

   <% unless f.object.new_record? %>
    <div>
    <%= f.check_box :completed, class: "my-2" %>
    <%= f.label :completed %>
    </div>
   <% end %>
    <%= f.submit class: "btn btn-dark mt-2" %>
<% end %>
