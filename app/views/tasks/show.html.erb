<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-3 "><%= @task.title %></h1>
      <%= link_to edit_task_path(@task), class: "btn btn-outline-dark " do %>
          <i class="fa-solid fa-pen-to-square ms-1 "></i>
          Edit
      <% end %>
  </div>
  <div class="bg-light rounded border border-black m-4">
    <p class="fs-4 p-4"><%= @task.details.capitalize %></p>
  </div>

  <div class="d-flex justify-content-between align-items-center mt-3">
    <% if @task.completed %>
      <p class="fw-bold">🏆 This task is completed 🏆</p>
    <% else %>
      <p class="fw-bold">💪 This task is not completed 💪</p>
    <% end %>

    <%= link_to task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Delete #{@task}?"},
    class: "btn btn-danger btn-sm" do %>
      <i class="fa-regular fa-trash-can"></i>
      Delete
    <% end %>

  </div>
  <hr>
  <%= link_to tasks_path, class: "btn btn-outline-dark btn-sm text-decoration-none" do %>
    <i class="fa-solid fa-rotate-left"></i>
    Back to My Task
  <% end %>
</div>
